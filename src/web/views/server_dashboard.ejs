<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title><%= guild.name %> - Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --sidebar: #0f1114; --menu: #1e2124; --content: #2f3136; --accent: #ff4757; --dim: #b9bbbe; }
        * { box-sizing: border-box; }
        body { margin: 0; font-family: 'Segoe UI', sans-serif; color: white; background: var(--content); overflow: hidden; }
        .app-container { display: flex; height: 100vh; }

        /* SIDEBARS */
        .servers-sidebar { width: 70px; background: var(--sidebar); display: flex; flex-direction: column; align-items: center; padding-top: 20px; gap: 10px; flex-shrink: 0; }
        .srv-icon { width: 48px; height: 48px; border-radius: 50%; background: #36393f; background-size: cover; border: 2px solid transparent; display: flex; align-items: center; justify-content: center; text-decoration: none; color: white; transition: 0.2s; cursor: pointer; }
        .srv-icon:hover, .srv-icon.active { border-radius: 30%; border-color: var(--accent); }
        .options-sidebar { width: 240px; background: var(--menu); border-right: 1px solid #202225; display: flex; flex-direction: column; }
        .menu-item { padding: 12px 20px; color: var(--dim); text-decoration: none; display: flex; align-items: center; gap: 10px; transition: 0.2s; font-size: 14px; }
        .menu-item.active { background: rgba(255,255,255,0.05); color: white; border-left: 3px solid var(--accent); }

        /* CONTENIDO */
        .content-area { flex: 1; padding: 40px; overflow-y: auto; }
        .card { background: #36393f; border-radius: 8px; padding: 25px; box-shadow: 0 4px 10px rgba(0,0,0,0.3); margin-bottom: 20px; }

        /* BUSCADOR Y TABLA */
        .eco-input { background: #202225; border: 1px solid #444; color: white; padding: 10px; border-radius: 6px; width: 100%; }
        .eco-table { width: 100%; border-collapse: collapse; margin-top: 10px; }
        .eco-table th { text-align: left; color: var(--dim); font-size: 11px; text-transform: uppercase; padding: 10px; }
        .user-row td { padding: 12px 10px; border-bottom: 1px solid #2f3136; }
        
        .val-pill { background: #202225; padding: 4px 10px; border-radius: 4px; font-family: monospace; font-weight: bold; }
    </style>
</head>
<body>
    <div class="app-container">
        <aside class="servers-sidebar">
            <a href="/dashboard" class="srv-icon"><i class="fas fa-home"></i></a>
            <% mutualGuilds.forEach(g => { %>
                <a href="/dashboard/<%= g.id %>" class="srv-icon <%= g.id === guild.id ? 'active' : '' %>" id="icon-<%= g.id %>">
                    <% if(g.icon) { %><script>document.getElementById('icon-<%= g.id %>').style.backgroundImage = "url('<%= g.icon %>')";</script><% } else { %><%= g.acronym %><% } %>
                </a>
            <% }) %>
        </aside>

        <aside class="options-sidebar">
            <div style="padding:20px; font-weight:bold; border-bottom:1px solid #2f3136;"><%= guild.name %></div>
            <a href="#" class="menu-item active" id="tab-profile"><i class="fas fa-chart-pie"></i> Mi Perfil</a>
            <a href="#" class="menu-item" id="tab-settings"><i class="fas fa-cog"></i> Configuración</a>
            <div style="margin-top: auto; padding-bottom: 20px;">
                <a href="/logout" class="menu-item" style="color:#ed4245;"><i class="fas fa-power-off"></i> Salir</a>
            </div>
        </aside>

        <main class="content-area">
            <div class="card">
                <h2 style="margin:0 0 20px 0;">Resumen de <%= user.username %></h2>
                <div style="display:flex; gap:20px;">
                    <div style="flex:1; background:#2f3136; padding:20px; border-radius:8px; border-bottom: 3px solid #43b581;">
                        <div style="color:#43b581; font-size:11px; font-weight:bold;">CARTERA</div>
                        <div style="font-size:24px; font-weight:bold;">$<%= economy.money.toLocaleString() %></div>
                    </div>
                    <div style="flex:1; background:#2f3136; padding:20px; border-radius:8px; border-bottom: 3px solid #f1c40f;">
                        <div style="color:#f1c40f; font-size:11px; font-weight:bold;">BANCO</div>
                        <div style="font-size:24px; font-weight:bold;">$<%= economy.bank.toLocaleString() %></div>
                    </div>
                </div>
            </div>

            <div class="card">
                <h3 style="margin:0 0 15px 0; font-size:16px;">Lista de Usuarios</h3>
                <input type="text" id="userSearch" placeholder="Buscar por nombre o ID..." class="eco-input">
                
                <table class="eco-table">
                    <thead>
                        <tr><th>Usuario</th><th>Cartera</th><th>Banco</th></tr>
                    </thead>
                    <tbody id="userTable">
                        <% allUsers.forEach(u => { %>
                            <tr class="user-row" data-search="<%= u.displayName.toLowerCase() %> <%= u.userId %>">
                                <td>
                                    <div style="display:flex; align-items:center; gap:10px;">
                                        <img src="<%= u.avatarUrl %>" style="width:32px; border-radius:50%;">
                                        <div>
                                            <div style="font-size:13px; font-weight:600;"><%= u.displayName %></div>
                                            <div style="font-size:10px; color:var(--dim);"><%= u.userId %></div>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="val-pill" style="color:#2ecc71;">$<%= u.money.toLocaleString() %></span></td>
                                <td><span class="val-pill" style="color:#f1c40f;">$<%= u.bank.toLocaleString() %></span></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
            <div class="card" id="settings-card" style="display:none;">
                <h3 style="margin:0 0 15px 0; font-size:16px;">Configuración del servidor</h3>
                <div style="display:flex; flex-direction:column; gap:10px; max-width:560px;">
                    <label>Prefijo de comandos</label>
                    <input id="cfg-prefix" class="eco-input" placeholder="." />

                    <label>Canal de bienvenida</label>
                    <select id="cfg-welcome" class="eco-input">
                        <option value="">— Ninguno —</option>
                        <% (channels || []).forEach(c => { %>
                            <option value="<%= c.id %>"><%= c.name %> — <%= c.id %></option>
                        <% }) %>
                    </select>

                    <label>Canal de salida</label>
                    <select id="cfg-leave" class="eco-input">
                        <option value="">— Ninguno —</option>
                        <% (channels || []).forEach(c => { %>
                            <option value="<%= c.id %>"><%= c.name %> — <%= c.id %></option>
                        <% }) %>
                    </select>

                    <label>Rol de moderadores</label>
                    <select id="cfg-mods" class="eco-input">
                        <option value="">— Ninguno —</option>
                        <% (roles || []).forEach(r => { %>
                            <option value="<%= r.id %>"><%= r.name %> — <%= r.id %></option>
                        <% }) %>
                    </select>

                    <div style="display:flex; gap:10px; margin-top:10px;">
                        <button id="saveCfg" class="btn btn-primary">Guardar</button>
                        <button id="cancelCfg" class="btn btn-secondary">Cancelar</button>
                        <span id="saveMsg" style="margin-left:10px;color:var(--dim);"></span>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.getElementById('userSearch').addEventListener('input', (e) => {
            const val = e.target.value.toLowerCase();
            document.querySelectorAll('.user-row').forEach(row => {
                row.style.display = row.getAttribute('data-search').includes(val) ? '' : 'none';
            });
        });
        // Settings panel logic
        const guildId = '<%= guild.id %>';
        const tabProfile = document.getElementById('tab-profile');
        const tabSettings = document.getElementById('tab-settings');
        const settingsCard = document.getElementById('settings-card');
        const userCard = document.querySelector('.card');

        tabSettings.addEventListener('click', (e) => {
            e.preventDefault();
            // show settings card
            settingsCard.style.display = '';
            // hide the users card (the previous .card after summary is users)
            document.querySelectorAll('.card')[1].style.display = 'none';
            tabProfile.classList.remove('active');
            tabSettings.classList.add('active');
            loadConfig();
        });

        tabProfile.addEventListener('click', (e) => {
            e.preventDefault();
            settingsCard.style.display = 'none';
            document.querySelectorAll('.card')[1].style.display = '';
            tabProfile.classList.add('active');
            tabSettings.classList.remove('active');
        });

        async function loadConfig() {
            try {
                const r = await fetch(`/api/guilds/${guildId}/config`);
                const j = await r.json();
                if (j.ok) {
                    const cfg = j.config || {};
                    document.getElementById('cfg-prefix').value = cfg.prefix || '.';
                    if (cfg.welcomeChannel) document.getElementById('cfg-welcome').value = cfg.welcomeChannel;
                    if (cfg.leaveChannel) document.getElementById('cfg-leave').value = cfg.leaveChannel;
                    if (cfg.modsRole) document.getElementById('cfg-mods').value = cfg.modsRole;
                } else {
                    document.getElementById('saveMsg').innerText = 'No se pudo cargar la configuración';
                }
            } catch (err) {
                document.getElementById('saveMsg').innerText = 'Error conectando al servidor';
            }
        }

        document.getElementById('saveCfg').addEventListener('click', async () => {
            const payload = {
                prefix: document.getElementById('cfg-prefix').value || '.',
                welcomeChannel: document.getElementById('cfg-welcome').value || null,
                leaveChannel: document.getElementById('cfg-leave').value || null,
                modsRole: document.getElementById('cfg-mods').value || null
            };
            document.getElementById('saveMsg').innerText = 'Guardando...';
            try {
                const r = await fetch(`/api/guilds/${guildId}/config`, { method: 'POST', headers: { 'Content-Type':'application/json' }, body: JSON.stringify(payload) });
                const j = await r.json();
                if (j.ok) {
                    document.getElementById('saveMsg').innerText = 'Guardado correctamente';
                } else {
                    document.getElementById('saveMsg').innerText = 'Error guardando: ' + (j.error || 'unknown');
                }
            } catch (err) {
                document.getElementById('saveMsg').innerText = 'Error de red';
            }
            setTimeout(()=>{ document.getElementById('saveMsg').innerText=''; }, 3000);
        });

        document.getElementById('cancelCfg').addEventListener('click', () => { tabProfile.click(); });
    </script>
</body>
</html>