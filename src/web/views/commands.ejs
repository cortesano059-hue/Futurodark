<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta property="og:title" content="Comandos - <%= bot.username %>">
    <meta property="og:description" content="Lista completa de comandos y utilidades de <%= bot.username %>.">
    <meta property="og:image" content="<%= bot.displayAvatarURL({format: 'png', size: 512}) %>">
    <meta property="og:theme-color" content="#ff4757">
    <link rel="icon" href="<%= bot.displayAvatarURL({format: 'png'}) %>">

    <title>Comandos - <%= bot.username %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* --- PALETA DE COLORES SINCRONIZADA --- */
        :root {
            --bg-container: #1e2124; 
            --bg-element: rgba(0, 0, 0, 0.2); 
            --border: #2f3136;
            --accent: #ff4757; 
            --text-main: #ffffff;
            --text-dim: #b9bbbe;
            --navbar-bg: #141619;
        }

        * { box-sizing: border-box; }

        body {
            background-image: url('https://wallpaperaccess.com/full/1155017.jpg'); 
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            box-shadow: inset 0 0 0 2000px rgba(15, 17, 20, 0.92);
            background-color: #0f1114;
            color: var(--text-main);
            font-family: 'Segoe UI', 'Roboto', sans-serif;
            margin: 0;
            min-height: 100vh;
            padding-bottom: 50px;
        }

        /* --- NAVBAR (60px exactos como en index) --- */
        .top-navbar {
            width: 100%; height: 60px; background-color: var(--navbar-bg); border-bottom: 1px solid #000000;
            display: flex; align-items: center; justify-content: space-between; padding: 0 25px;
            position: sticky; top: 0; z-index: 1000; font-size: 14px;
        }
        .nav-left { display: flex; align-items: center; gap: 12px; text-decoration: none; color: white; }
        .nav-logo { width: 32px; height: 32px; border-radius: 50%; border: 1px solid var(--accent); }
        .nav-brand { font-weight: 700; font-size: 18px; text-transform: uppercase; letter-spacing: 1px; }

        .nav-center { display: flex; gap: 25px; position: absolute; left: 50%; transform: translateX(-50%); }
        .nav-link { color: var(--text-dim); text-decoration: none; font-weight: 500; transition: 0.2s; font-size: 13px; text-transform: uppercase; }
        .nav-link:hover, .nav-link.active { color: white; }
        .nav-link.active { color: var(--accent); font-weight: bold; }

        .nav-right { display: flex; align-items: center; gap: 20px; }
        .user-profile { display: flex; align-items: center; gap: 8px; border-left: 1px solid var(--border); padding-left: 15px; cursor: pointer; }
        .user-avatar { width: 28px; height: 28px; border-radius: 50%; border: 1px solid var(--accent); }

        /* --- CONTENEDOR PRINCIPAL --- */
        .main-wrapper { max-width: 1200px; margin: 40px auto; padding: 0 20px; }

        .glass-panel {
            background: rgba(30, 33, 36, 0.8);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.5);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .glass-panel::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--accent);
            box-shadow: 0 0 15px var(--accent);
        }

        /* --- DISEÑO DE COLUMNAS --- */
        .panel-body { display: flex; gap: 35px; margin-top: 20px; }

        /* SIDEBAR */
        .sidebar { width: 240px; flex-shrink: 0; display: flex; flex-direction: column; gap: 6px; }
        .cat-btn {
            background: transparent; border: none; color: var(--text-dim); padding: 12px 15px;
            text-align: left; cursor: pointer; font-size: 14px; font-weight: 600; border-radius: 6px;
            display: flex; justify-content: space-between; align-items: center; transition: 0.2s;
        }
        .cat-btn:hover { background: rgba(255,255,255,0.05); color: white; }
        .cat-btn.active { background: var(--accent); color: white; box-shadow: 0 4px 12px rgba(255, 71, 87, 0.3); }
        .badge { background: rgba(0,0,0,0.3); padding: 2px 8px; border-radius: 10px; font-size: 11px; }

        /* CONTENIDO */
        .content-area { flex: 1; }
        .search-bar {
            background: rgba(0,0,0,0.3); border: 1px solid var(--border); padding: 16px;
            border-radius: 8px; color: white; width: 100%; margin-bottom: 25px; outline: none;
            transition: 0.3s; font-size: 14px;
        }
        .search-bar:focus { border-color: var(--accent); background: rgba(0,0,0,0.4); }

        /* FILAS DE COMANDO */
        .cmd-row {
            background: rgba(255,255,255,0.02); border: 1px solid var(--border);
            border-radius: 8px; padding: 18px 25px; margin-bottom: 12px;
            display: flex; align-items: center; gap: 30px; transition: 0.2s;
        }
        .cmd-row:hover { 
            border-color: rgba(255,255,255,0.1); 
            background: rgba(255, 71, 87, 0.05); 
            transform: translateX(5px);
            border-left: 4px solid var(--accent);
        }
        .col-name { width: 180px; color: var(--accent); font-weight: 800; font-family: 'Consolas', monospace; font-size: 16px; }
        .col-desc { flex: 1; color: var(--text-dim); font-size: 14px; border-left: 1px solid var(--border); padding-left: 25px; line-height: 1.5; }
        
        .hidden { display: none !important; }

        @media (max-width: 768px) {
            .panel-body { flex-direction: column; }
            .sidebar { width: 100%; flex-direction: row; overflow-x: auto; padding-bottom: 10px; }
            .cmd-row { flex-direction: column; align-items: flex-start; gap: 10px; }
            .col-desc { border-left: none; padding-left: 0; padding-top: 10px; border-top: 1px solid var(--border); }
        }
    </style>
</head>
<body>

    <nav class="top-navbar">
        <div class="nav-left">
            <img src="<%= bot.displayAvatarURL({format: 'png'}) %>" class="nav-logo">
            <a href="/" class="nav-brand"><%= bot.username %></a>
        </div>

        <div class="nav-center">
            <a href="/comandos" class="nav-link active">Comandos</a>
            <a href="/dashboard" class="nav-link">Dashboard</a>
            <a href="/leaderboard" class="nav-link">Leaderboard</a>
        </div>

        <div class="nav-right">
            <% if(user) { %>
                <div class="user-profile" onclick="window.location.href='/dashboard'">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" class="user-avatar">
                    <span style="font-weight: 600; font-size: 13px;"><%= user.username %></span>
                </div>
            <% } else { %>
                <a href="/login" class="nav-link" style="color: var(--accent); font-weight: 800;">Login</a>
            <% } %>
        </div>
    </nav>

    <div class="main-wrapper">
        <div class="glass-panel">
            <div style="margin-bottom: 30px;">
                <h1 style="font-size: 24px; font-weight: 900; margin: 0; text-transform: uppercase; letter-spacing: 1px;">Lista de Comandos</h1>
                <p style="color: var(--text-dim); font-size: 13px; margin-top: 5px;">Explora todas las funciones disponibles de <%= bot.username %>.</p>
            </div>

            <div class="panel-body">
                <aside class="sidebar">
                    <% let total = 0; Object.keys(grupos).forEach(k => total += grupos[k].length); %>
                    <button class="cat-btn active" onclick="filtrar('Todo', this)">
                        <span>TODO</span>
                        <span class="badge"><%= total %></span>
                    </button>
                    <% Object.keys(grupos).sort().forEach(cat => { %>
                        <button class="cat-btn" onclick="filtrar('<%= cat %>', this)">
                            <span><%= cat.toUpperCase() %></span>
                            <span class="badge"><%= grupos[cat].length %></span>
                        </button>
                    <% }) %>
                </aside>

                <main class="content-area">
                    <input type="text" id="search" class="search-bar" placeholder="¿Qué comando buscas? Escribe aquí..." onkeyup="buscar()">
                    
                    <div id="list">
                        <% Object.keys(grupos).forEach(cat => { %>
                            <% grupos[cat].forEach(cmd => { %>
                                <div class="cmd-row" data-cat="<%= cat %>" data-name="<%= cmd.name %>">
                                    <div class="col-name">/<%= cmd.name %></div>
                                    <div class="col-desc"><%= cmd.description %></div>
                                </div>
                            <% }) %>
                        <% }) %>
                    </div>

                    <div id="empty" style="display:none; text-align:center; padding: 50px; color: var(--text-dim);">
                        <i class="fas fa-search" style="font-size: 30px; margin-bottom: 15px; opacity: 0.2;"></i>
                        <p>No se han encontrado comandos que coincidan con tu búsqueda.</p>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <script>
        function filtrar(cat, btn) {
            document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            const rows = document.querySelectorAll('.cmd-row');
            rows.forEach(row => {
                if (cat === 'Todo' || row.dataset.cat === cat) row.classList.remove('hidden');
                else row.classList.add('hidden');
            });
            document.getElementById('search').value = '';
            document.getElementById('empty').style.display = 'none';
        }

        function buscar() {
            const val = document.getElementById('search').value.toLowerCase();
            const rows = document.querySelectorAll('.cmd-row');
            let count = 0;

            rows.forEach(row => {
                const name = row.dataset.name.toLowerCase();
                const desc = row.querySelector('.col-desc').innerText.toLowerCase();
                
                if (name.includes(val) || desc.includes(val)) {
                    row.classList.remove('hidden');
                    count++;
                } else {
                    row.classList.add('hidden');
                }
            });

            document.getElementById('empty').style.display = count === 0 ? 'block' : 'none';
            // Reset de categorías al buscar
            if(val !== "") {
                document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
            }
        }
    </script>
</body>
</html>