<%- include('partials/header') %>

    <div class="main-wrapper">
        <div class="glass-panel">
            <div style="margin-bottom:20px; display:flex; justify-content:space-between; align-items:center;">
                <h1 style="margin:0; font-size:22px;">Mi Inventario</h1>
                <div style="color:var(--text-dim);">Saldo: <strong><%= economy.money %></strong> monedas</div>
            </div>

            <div class="panel-body">
                <main class="content-area">
                    <% if(inventory && inventory.length){ %>
                        <div class="inventory-grid">
                            <% inventory.forEach(it => { %>
                                <div class="inv-card">
                                    <img src="<%= it.icon || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="" class="inv-icon">
                                    <div class="inv-name"><%= it.name %></div>
                                    <div class="inv-count">x<%= it.count %></div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p style="color:var(--text-dim);">No tienes art√≠culos en tu inventario.</p>
                    <% } %>
                </main>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>
